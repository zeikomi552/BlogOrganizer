<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlogOrganizer"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors" x:Class="BlogOrganizer.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5" VerticalAlignment="Center" Text="SQLファイルパス:"/>
            <TextBox IsReadOnly="True" Margin="5" VerticalAlignment="Center" Width="250" Text=""/>
            <Button Margin="5" VerticalAlignment="Center" Content="ファイル選択">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <b:CallMethodAction/>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Button>
        </StackPanel>

        <Grid Margin="5" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="132*"/>
                <ColumnDefinition Width="263*"/>
            </Grid.ColumnDefinitions>

            <DataGrid Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="記事タイトル"/>
                </DataGrid.Columns>
            </DataGrid>

            <TextBox IsReadOnly="True" Margin="5" Grid.Column="1" Text=""/>

        </Grid>

    </Grid>
</Window>
